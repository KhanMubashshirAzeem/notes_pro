<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/highLighter"
    tools:context=".Activity.NotesDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layoutTwo"
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:layout_margin="12sp"
                android:background="@drawable/round_corner"
                android:backgroundTint="@color/dark"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="6dp"
                    android:onClick="BackPress"
                    android:padding="12sp"
                    android:src="@drawable/baseline_arrow_back_24" />

                <TextView
                    android:id="@+id/pageTitle"
                    style="@style/header"
                    android:layout_weight="1"
                    android:text="Add New note"
                    android:textColor="@color/softWhite"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/saveNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="6dp"
                    android:padding="12sp"
                    android:src="@drawable/check"
                    app:layout_constraintBottom_toBottomOf="@+id/pageTitle"
                    app:layout_constraintEnd_toEndOf="@+id/pageTitle"
                    app:layout_constraintTop_toTopOf="@+id/pageTitle" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="Your notes"
                android:textColor="@color/softBlack"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutTwo" />


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/round_corner"
                android:backgroundTint="@color/light"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2">

                <EditText
                    android:id="@+id/AddTitle"
                    style="@style/EditText"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/light"
                    android:hint="Title"
                    android:inputType="text"
                    android:textStyle="bold"
                    tools:ignore="Autofill,HardcodedText,TextFields" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/dark" />

                <EditText
                    android:id="@+id/AddContent"
                    style="@style/EditText"
                    android:backgroundTint="@color/light"
                    android:gravity="top"
                    android:hint="Content"
                    android:minLines="15"
                    tools:ignore="Autofill,TextFields" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayout">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="To Do list"
                    android:textAlignment="viewStart"
                    android:textColor="@color/softBlack"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/addTaskBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/dark"
                    android:text="Add task"
                    android:textColor="@color/softWhite"
                    android:textSize="18dp" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12sp"
                android:background="@drawable/round_corner"
                android:backgroundTint="@color/light"
                android:padding="8dp"
                app:layout_constraintBottom_toTopOf="@+id/deleteNote"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/deleteNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="48sp"
                android:layout_marginEnd="48sp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/round_corner"
                android:backgroundTint="@color/dark"
                android:padding="3dp"
                android:text="Delete Note"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>